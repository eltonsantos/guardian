{
  "manifest_version": 3,
  "name": "Guardian",
  "version": "2.0.0",
  "description": "Local and network-level content blocking for Chrome using domain, URL patterns, keyword rules and DNS protection, secured by password.",
  "incognito": "spanning",
  "action": {
    "default_title": "Guardian",
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/service_worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://extensionpay.com/*"],
      "js": ["shared/ExtPay/dist/ExtPay.js"],
      "run_at": "document_start"
    }
  ],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  }
}
